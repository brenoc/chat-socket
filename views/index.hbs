{{!< layout}}

<div class="container">
  <ul id="messages" class="list-unstyled">
  </ul>
</div>

<div id="footer">
  <div class="container">
    <form class="chat-message-form form-horizontal" role="form">
      <div class="form-group">
        <div class="col-sm-10">
          <input type="text" class="form-control" id="message-field" placeholder="Type your message">
        </div>
        <div class="col-sm-2">
          <button type="submit" class="btn btn-default btn-block">Send</button>
        </div>
      </div>
    </form>
  </div>
</div>
